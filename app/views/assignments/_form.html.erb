<div class="new-assignment">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <div class="pull-right close-new-assignment-button-container">
            <button type='button' class='close' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
          </div>
        </div>
      </div>

      <%= simple_form_for [ @to_do_list, @assignment ], remote: true do |f| %>
        <%= f.input :name %>
        <%= f.input :description, as: :text %>

        <div class="col-md-6 col-md-offset-6">
          <div class="new-assignment-buttons">
            <button class='btn btn-success btn-block add-assignment'> Adicionar </button>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
