 <li class="assignment-entry" data-id=<%= assignment.id %> > 
  <%= simple_form_for assignment, remote: true do |f| %>
    <%= f.input :name, as: :hidden, input_html: { class: "assignment-name-input-hidden" } %>
    <%= f.input :description, as: :hidden, input_html: { class: "assignment-description-input-hidden" } %>

    <div class="row">

      <div class="col-xs-8 col-md-8">
        <div class="assignment-name">
          <p>
            <b> <%= assignment.name %> </b>
          </p>
        </div>
      </div>

      <div class="col-xs-4 col-md-4 pull-right">
        <% if can? [:update, :destroy], assignment %>
          <div class="assignment-entry-buttons">
            <button type="button" class="btn btn-danger pull-right remove-assignment" id="remove-assignment" aria-label="Left Align">
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>

            <button type="button" class="btn btn-warning pull-right edit-assignment" id="edit-assignment" aria-label="Left Align">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
          </div>
        <% end %>
      </div>

    </div>

    <div class="row">
      <div class="col-xs-12 col-md-8">
        <div class="assignment-description">
          <p> <%= assignment.description %> </p>
        </div>
      </div>
    </div>

  <% end %>
</li>