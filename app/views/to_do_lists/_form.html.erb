<%= simple_form_for(@to_do_list, url: ( @to_do_list.persisted? ? to_do_list_path(@to_do_list) : user_to_do_lists_path(current_user) ), 
  html: { class: 'form-horizontal' }) do |form| %>

  <%= form.input :name %>
  <%= form.input :list_type, collection: ToDoListTypes.to_a, include_blank: false %>

  <div class="form-group pull-right">
    <%= form.button :submit, "Salvar" %>
  </div>
<% end %>
