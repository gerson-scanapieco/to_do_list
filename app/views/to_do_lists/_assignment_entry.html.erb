 <li class="assignment-entry" data-id=<%= assignment.id %> > 
  <%= simple_form_for @to_do_list, remote: true do |f| %>
    <%= f.simple_fields_for :assignments, assignment do |remove_assignment_form| %>
      <%= remove_assignment_form.input :name, as: :hidden, input_html: { class: "assignment-name-input-hidden" } %>
      <%= remove_assignment_form.input :description, as: :hidden, input_html: { class: "assignment-description-input-hidden" } %>
      <%= remove_assignment_form.input :_destroy, as: :hidden, input_html: { class: "destroy-assignment" } %>
    <% end %>

    <% if can? [:update, :destroy], assignment %>
      <div class="assignment-entry-buttons">
        <button class="btn btn-danger pull-right remove-assignment" id="remove-assignment" aria-label="Left Align">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </button>

        <button type="button" class="btn btn-warning pull-right edit-assignment" id="edit-assignment" aria-label="Left Align">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
      </div>
    <% end %>

    <div class="assignment-name">
      <b> <%= assignment.name %> </b>
    </div>

    <div class="assignment-description">
      <p> <%= assignment.description %> </p>
    </div>
  <% end %>
</li>