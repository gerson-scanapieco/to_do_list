<% if @removed.present? %>
  $(".assignments-list").find("[data-id='<%= @removed %>']").remove();
  
  if ( $(".assignments-list").find(".assignment-entry").length == 0 ) {
    $(".assignments-list").append("<%= escape_javascript(render partial: 'no_assignment_found') %>");
  }

<% elsif @updated.present? %>
  $(".assignments-list").find("[data-id='<%= @updated.first.id %>']").replaceWith("<%= escape_javascript(render partial: 'assignment_entry', locals: { assignment: @updated.first } ) %>");

<% elsif @added.present? %>
  $(".assignments-list").find(".new-assignment").remove();
  $(".assignments-list").find(".no-assignment-found").remove();
  $(".assignments-list").append("<%= escape_javascript(render partial: 'assignment_entry', locals: { assignment: @to_do_list.assignments.last } ) %>" );
<% end %>
