<div class="row">
  <div class="col-md-3">
    <div class="section-header">
      <h2> Editar Perfil </h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="section-content">
      <%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |form| %>
        <%= form.input :name %>
        <%= form.input :email %>

        <div class="form-group pull-right">
          <%= form.button :submit, "Salvar alterações" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
