<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="form-title">
      <h2>Esqueceu sua senha?</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="form-group">
          <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control" } %>
        </div>
      </div>

      <div class="form-actions">
        <div class="form-group">
          <%= f.button :submit, "Enviar instruções para mudar minha senha", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>